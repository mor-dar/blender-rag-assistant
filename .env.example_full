# Blender RAG Assistant Configuration

# === RAG Mode Configuration ===
# Options: "evaluation" (free Groq) or "production" (OpenAI)
RAG_MODE=evaluation

# === API Keys ===
# Groq API Key (free tier for evaluation mode)
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Key (optional, for production mode)
OPENAI_API_KEY=your_openai_api_key_here

# === Model Configuration ===
# Groq Models
GROQ_MODEL=llama3-8b-8192
GROQ_TEMPERATURE=0.7
GROQ_MAX_TOKENS=2048

# OpenAI Models (when using production mode)
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2048

# === Vector Database Configuration ===
# ChromaDB settings
CHROMA_PERSIST_DIRECTORY=./data/vector_db
CHROMA_COLLECTION_NAME=blender_docs

# === Embedding Configuration ===
# HuggingFace model for embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DEVICE=cpu

# === Retrieval Settings ===
# Number of documents to retrieve
RETRIEVAL_K=5
# Minimum similarity threshold
SIMILARITY_THRESHOLD=0.7

# === Text Processing ===
# Chunk size for document processing
CHUNK_SIZE=512
CHUNK_OVERLAP=50

# === Logging Configuration ===
LOG_LEVEL=INFO
LOG_FILE=./logs/rag_assistant.log

# === Performance Settings ===
# Enable caching for repeated queries
ENABLE_CACHING=true
CACHE_TTL=3600

# === Development Settings ===
DEBUG=false
VERBOSE=false